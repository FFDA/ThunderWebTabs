{

	"manifest_version" : 2,
	"name": "ThunderWebTabs",
	"version": "0.3",

	"browser_specific_settings": {
		"gecko": {
			"strict_min_version": "64.0",
			"id": "thunderwebtabs@gmail.com"
		}
	},
	
	"description": "Opens Google Keep, Google Photos, Android Messages or any other website in Thunderbird's tab.",
	
	"icons": {
		"48": "icons/ThunderWebTabs_logo_48.png",
		"96": "icons/ThunderWebTabs_logo_96.png"
	},
	
	"browser_action": {
		"browser_style": true,
		"default_icon": "icons/ThunderWebTabs_logo_48.png",
		"default_popup": "popup/ThunderWebTabs.html",
		"default_title": "TWT"
	}
	
}
